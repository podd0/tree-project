 .\pointgen.exe --file ..\examples\hemisphere\hemisphere.ply --shape generic_shape --samples 100000 --output ..\examples\hemisphere\points.ply
 .\yconverts --shape ..\examples\hemisphere\points.ply --rotate 90 0 0 --scale 1 0.8 1 --translate 0 1.5 0 --output ..\examples\pine\points.ply
 .\tree.exe --input ..\examples\pine\points.ply --enable_leaves --leaf ..\examples\leaves\pine_needles_3d.ply --output  ..\examples\pine\tree.ply --leaves_output  ..\examples\pine\pine_needles.ply --br_length 0.010 --kill 0.04 --attraction 2  --leaf_radius 0.001 --leaf_scale 0.03 --inverted_growth 3 --random_factor 0.3